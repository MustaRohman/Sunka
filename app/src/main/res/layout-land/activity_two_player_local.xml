<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="toucan.sunka.TwoPlayerLocalActivity">


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <toucan.sunka.Crater
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/store_left"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/top_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <toucan.sunka.Crater
                    android:id="@+id/crater_seven"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content"
                    android:onClick="onCraterClick" />
                <toucan.sunka.Crater
                    android:id="@+id/crater_six"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
                <toucan.sunka.Crater
                    android:id="@+id/crater_five"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
                <toucan.sunka.Crater
                    android:id="@+id/crater_four"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
                <toucan.sunka.Crater
                    android:id="@+id/crater_three"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
                <toucan.sunka.Crater
                    android:id="@+id/crater_two"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
                <toucan.sunka.Crater
                    android:id="@+id/crater_one"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <toucan.sunka.Crater
                    android:id="@+id/crater_nine"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
                <toucan.sunka.Crater
                    android:id="@+id/crater_ten"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
                <toucan.sunka.Crater
                    android:id="@+id/crater_eleven"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
                <toucan.sunka.Crater
                    android:id="@+id/crater_twelve"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
                <toucan.sunka.Crater
                    android:id="@+id/crater_thirteen"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
                <toucan.sunka.Crater
                    android:id="@+id/crater_fourteen"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
                <toucan.sunka.Crater
                    android:id="@+id/crater_fifteen"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <toucan.sunka.Crater
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/store_right"/>

    </LinearLayout>

</RelativeLayout>
