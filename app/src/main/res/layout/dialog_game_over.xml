<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/win_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Player1 Has Won!"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_bottom_gameOver"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="7dip">

        <TextView
            android:background="@drawable/border"
            android:id="@+id/player_one_name_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player1"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center" />

        <TextView
            android:background="@drawable/border"
            android:id="@+id/player_two_name_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player2"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"/>

        </TableRow>

   </TableLayout>

    <TableLayout
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dip">

            <TextView
                android:id="@+id/player_one_wins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wins"
                android:textSize="22sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/player_two_wins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:textSize="20sp"
                android:gravity="center"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dip">

            <TextView
                android:id="@+id/player_one_stones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="32"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stones"
                android:textSize="22sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/player_two_stones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24"
                android:textSize="@dimen/text_size"
                android:layout_weight="1"
                android:gravity="center"/>

        </TableRow>

    </TableLayout>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leaderboard"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_bottom_gameOver"
        android:textSize="23sp"/>

    <TableLayout
        android:background="@drawable/border"
        android:id="@+id/leaderboard_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shrinkColumns="1">

        <TableRow
            android:background="@drawable/border">

            <TextView
                android:background="@drawable/border"
                android:text="Rank"
                android:textSize="@dimen/text_size"
                android:padding="7dip"/>

            <TextView
                android:background="@drawable/border"
                android:text="Name"
                android:textSize="@dimen/text_size"
                android:padding="7dip"/>

            <TextView
                android:background="@drawable/border"
                android:text="Score"
                android:textSize="@dimen/text_size"
                android:padding="7dip"/>
            <TextView
                android:background="@drawable/border"
                android:text="Losses"
                android:textSize="20sp"
                android:padding="7dip"/>

        </TableRow>

    </TableLayout>

</LinearLayout>